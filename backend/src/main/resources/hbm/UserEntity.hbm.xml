<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.imwxz.store.entity">

    <class name="UserEntity" table="user" schema="store">
        <id name="userId">
            <column name="user_id" sql-type="int(11)"/>
            <generator class="increment"/>
        </id>
        <property name="userName">
            <column name="user_name" sql-type="varchar(32)" length="32"/>
        </property>
        <property name="userPassword">
            <column name="user_password" sql-type="varchar(64)" length="64"/>
        </property>
        <property name="userEmail">
            <column name="user_email" sql-type="varchar(32)" length="32"/>
        </property>
        <property name="userStatus">
            <column name="user_status" sql-type="int(11)"/>
        </property>
        <property name="userPermission">
            <column name="user_permission" sql-type="int(11)"/>
        </property>
        <set name="ordersByUserId" inverse="true">
            <key>
                <column name="user_id"/>
            </key>
            <one-to-many not-found="ignore" class="com.imwxz.store.entity.OrderEntity"/>
        </set>
    </class>
</hibernate-mapping>