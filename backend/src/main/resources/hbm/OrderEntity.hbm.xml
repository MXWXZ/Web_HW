<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.imwxz.store.entity">

    <class name="OrderEntity" table="`order`" schema="store" dynamic-insert="true">
        <id name="orderId">
            <column name="order_id" sql-type="int(11)"/>
            <generator class="increment"/>
        </id>
        <property name="userId">
            <column name="user_id" sql-type="int(11)"/>
        </property>
        <property name="orderStatus">
            <column name="order_status" sql-type="int(11)"/>
        </property>
        <property name="orderTime">
            <column name="order_time" sql-type="datetime"/>
        </property>
        <property name="orderPrice">
            <column name="order_price" sql-type="int(11)"/>
        </property>
        <many-to-one name="userByUserId" class="com.imwxz.store.entity.UserEntity" insert="false" update="false">
            <column name="user_id"/>
        </many-to-one>
        <set name="orderItemsByOrderId" inverse="true">
            <key>
                <column name="order_id"/>
            </key>
            <one-to-many not-found="ignore" class="com.imwxz.store.entity.OrderItemEntity"/>
        </set>
    </class>
</hibernate-mapping>