<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.imwxz.store.entity">

    <class name="OrderItemEntity" table="order_item" schema="store">
        <id name="orderItemId">
            <column name="order_item_id" sql-type="int(11)"/>
            <generator class="increment"/>
        </id>
        <property name="orderId">
            <column name="order_id" sql-type="int(11)"/>
        </property>
        <property name="bookId">
            <column name="book_id" sql-type="int(11)"/>
        </property>
        <property name="orderAmount">
            <column name="order_amount" sql-type="int(11)"/>
        </property>
        <many-to-one name="orderByOrderId" class="com.imwxz.store.entity.OrderEntity" insert="false" update="false">
            <column name="order_id"/>
        </many-to-one>
        <many-to-one name="bookByBookId" class="com.imwxz.store.entity.BookEntity" insert="false" update="false">
            <column name="book_id"/>
        </many-to-one>
    </class>
</hibernate-mapping>