<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mariadb://localhost:3306/store</property>
        <property name="connection.driver_class">org.mariadb.jdbc.Driver</property>

        <property name="connection.username">root</property>
        <property name="connection.password">123456</property>

        <!-- SQL dialect -->
        <property name="dialect">org.hibernate.dialect.MariaDB53Dialect</property>

        <property name="show_sql">false</property>

        <!-- DB schema will be updated if needed -->
        <property name="hbm2ddl.auto">update</property>
        <mapping class="com.imwxz.store.entity.BookEntity"/>
        <mapping class="com.imwxz.store.entity.OrderEntity"/>
        <mapping class="com.imwxz.store.entity.OrderItemEntity"/>
        <mapping class="com.imwxz.store.entity.UserEntity"/>
    </session-factory>
</hibernate-configuration>