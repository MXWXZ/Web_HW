<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.imwxz.store.entity.BookEntity" table="book" schema="store">
        <id name="bookId">
            <column name="book_id" sql-type="int(11)"/>
        </id>
        <property name="bookName">
            <column name="book_name" sql-type="varchar(256)" length="256"/>
        </property>
        <property name="bookAuthor">
            <column name="book_author" sql-type="varchar(256)" length="256" not-null="true"/>
        </property>
        <property name="bookPrice">
            <column name="book_price" sql-type="int(11)"/>
        </property>
        <property name="bookIsbn">
            <column name="book_isbn" sql-type="varchar(32)" length="32"/>
        </property>
        <property name="bookAmount">
            <column name="book_amount" sql-type="int(11)"/>
        </property>
        <property name="bookImg">
            <column name="book_img" sql-type="varchar(32)" length="32" not-null="true"/>
        </property>
        <property name="bookDetail">
            <column name="book_detail" sql-type="varchar(1024)" length="1024" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>